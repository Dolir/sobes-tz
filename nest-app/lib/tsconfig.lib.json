{
  "compilerOptions": {
    "declaration": true,
    "noEmit": false,
    "incremental": false,
    "skipLibCheck": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "ES2021",
    "outDir": "./dist/lib",
    "baseUrl": "./lib/"
  },
  "include": ["*.ts", "**/*.ts"],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "node_modules",
    "test",
    "dist",
    "**/*spec.ts",
    "**/*test.ts",
    "coverage"
  ]
}
